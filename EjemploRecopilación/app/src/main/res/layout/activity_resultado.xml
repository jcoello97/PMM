<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mati.ejemplorecopilacin.Resultado"
    android:gravity="center|top">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_Resultado_Zonas"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="ZONA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_Resultado_Tarifa"
        android:layout_below="@+id/textView_Resultado_Zonas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="TARIFA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_Resultado_Peso"
        android:layout_below="@+id/textView_Resultado_Tarifa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="PESO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_Resultado_Final"
        android:text="PRECIO FINAL"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView_Resultado_Peso"
        android:layout_alignLeft="@+id/textView_Resultado_Peso"
        android:layout_alignStart="@+id/textView_Resultado_Peso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DECORACION"
        android:id="@+id/textView_Resultado_Decoracion"
        android:layout_below="@+id/textView_Resultado_Peso"
        android:layout_alignLeft="@+id/textView_Resultado_Peso"
        android:layout_alignStart="@+id/textView_Resultado_Peso" />

</RelativeLayout>
