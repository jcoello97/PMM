<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp">

    <TextView
        android:text="DARTE DE BAJA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_darte_baja_titulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textStyle="normal|bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/til_darte_baja_password"
        android:layout_below="@+id/tv_darte_baja_titulo"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe tu contraseña"
            android:id="@+id/et_darte_baja_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_darte_baja_password_repetir"
        android:layout_below="@+id/til_darte_baja_password"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirma la contraseña"
            android:id="@+id/et_darte_baja_password_repetir"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/textInputLayout"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bttn_darte_baja_aceptar"
        android:layout_below="@+id/til_darte_baja_password_repetir"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bttn_darte_baja_cancelar"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/til_darte_baja_password_repetir"
        android:layout_alignParentStart="true" />


</RelativeLayout>