<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv_asignatura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cv_asignatura_imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@color/cardview_dark_background" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/cv_asignatura_fecha_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="FECHA INICIO"
                android:layout_below="@+id/cv_asignatura_nombre"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/cv_asignatura_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="NOMBRE"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/cv_asignatura_fecha_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="FECHA FIN"
                android:layout_below="@+id/cv_asignatura_nombre"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/cv_asignatura_hora_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HORA INICIO"
                android:layout_below="@+id/cv_asignatura_fecha_inicio"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/cv_asignatura_hora_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="HORA FIN"
                android:layout_below="@+id/cv_asignatura_fecha_fin"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/cv_asignatura_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="DESCRIPCION"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>