<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_curso_detalle"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:layout_height="180dp"
    android:backgroundTint="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/cv_curso_detalle_imagen" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv_curso_detalle_nombre"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                tools:text="Mates"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cv_curso_detalle_descripcion"
                tools:text="DescripciÃ³n"
                android:layout_below="@+id/cv_curso_detalle_nombre"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/cardViewCodigo" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewCodigo"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                app:cardElevation="10dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cv_curso_detalle_codigo"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Large"
                        android:textStyle="normal|bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>