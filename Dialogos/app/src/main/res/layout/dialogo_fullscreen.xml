<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp">
        <TextView
            android:id="@+id/tv_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <Spinner
            android:id="@+id/sp_clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/clientes"
            android:layout_below="@id/tv_cliente"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/tv_productos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Producto"
            android:layout_below="@id/sp_clientes"/>
        <Spinner
            android:id="@+id/sp_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_productos"
            android:entries="@array/productos"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/tv_fecha_y_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_productos"
            android:text="Fecha"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_fecha_y_hora"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"/>

        <TextView
            android:id="@+id/tv_prioridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_fecha"
            android:text="Prioridad"
            android:layout_marginTop="15dp"/>
        <Spinner
            android:id="@+id/sp_prioridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_prioridad"
            android:layout_alignParentStart="true"
            android:entries="@array/prioridades"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/tv_notas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/sp_prioridad"
            android:text="Notas"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/et_notas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_notas"
            android:layout_alignParentStart="true"
            android:hint="Notas"/>

        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_above="@id/tv_prioridad"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</ScrollView>